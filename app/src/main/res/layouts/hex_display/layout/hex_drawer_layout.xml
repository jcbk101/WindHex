    <include
            layout = "@layout/hex_content_main" android:layout_width = "match_parent" android:layout_height = "match_parent" />

    <LinearLayout
            android:layout_width = "@dimen/_180sdp"
            android:layout_height = "match_parent"
            android:layout_gravity = "start"
            android:animateLayoutChanges = "false"
            android:background = "?colorPrimaryDark"
            android:orientation = "vertical">

        <com.GenesysEast.windhex.CustomControls.GradientTextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center"
                android:paddingStart = "@dimen/_6sdp"
                android:paddingEnd = "@dimen/_6sdp"
                android:text = "@string/nav_header_text"
                android:textColor = "?attr/menuTextColor"
                android:textSize = "@dimen/header_text_size"
                android:textStyle = "italic|bold"
                app:colorList = "?myColorList"
                app:gradient = "on" />


        <ListView
                android:id = "@+id/navListView"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:background = "?colorPrimaryDark"
                android:dividerHeight = "2dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>


