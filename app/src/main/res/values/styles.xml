        <item name = "myDialogBox">@drawable/green_dialog_box</item>
        <item name = "myBasicBox">@drawable/green_basic_box</item>
        <item name = "myContainer">@drawable/green_container_box</item>

        <!-- Color list for gradients -->
        <item name = "myColorList">@array/green_color_list</item>

        <!-- Progress Bar -->
        <item name = "mySeekBar">@drawable/green_seekbar</item>
        <item name = "mySwitch">@drawable/green_switch_thumb</item>

        <!-- Button styling -->
        <item name = "buttonStyle">@style/CustomButton</item>

