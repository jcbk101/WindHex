    //
    //#########################################
     -->
    <style name = "Theme.AppBarOverlay"
           parent = "ThemeOverlay.AppCompat">
        <!-- Controls Menu Text color -->
        <item name = "android:textColorPrimary">?attr/menuTextColor</item>
        <item name = "android:textSize">@dimen/list_text_size</item>

        <item name = "android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name = "actionButtonStyle">@style/myActionButtonStyle</item>

        <!-- Overflow menu styling -->
        <item name = "actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
        <!-- < v21-->
        <item name = "listPreferredItemHeightSmall">@dimen/_30sdp</item>
        <!-- v21 >-->
        <item name = "android:listPreferredItemHeightSmall">@dimen/_30sdp</item>
        <!--
                <item name="listPreferredItemPaddingStart">0dp</item>
                <item name="listPreferredItemPaddingLeft">0dp</item>
                <item name="listPreferredItemPaddingRight">0dp</item>
                <item name="listPreferredItemPaddingEnd">0dp</item>
        -->


        <!-- Controls Options Menu and Overflow icon color Text color-->
        <!--        <item name="android:textColorSecondary">?attr/colorAccent</item>-->
        <!-- Controls Options Menu window background color -->
        <!--                <item name = "android:itemBackground">@drawable/red_menu_selector</item>-->
        <!--        <item name="android:colorBackground">?attr/colorPrimaryDark</item>-->
    </style>

    <style name = "CustomActivityAnimation"
           parent = "@android:style/Animation.Activity">
        <item name = "android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name = "android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name = "android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name = "android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name = "DialogAnimations">
        <item name = "android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name = "android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <!-- Standard Button Style -->
    <style name = "CustomButton"
           parent = "Widget.AppCompat.Button">
        <item name = "android:minHeight">@dimen/_24sdp</item>
        <item name = "android:minWidth">@dimen/_52sdp</item>
    </style>

    <!-- Action Button settings -->
    <style name = "myActionButtonStyle"
           parent = "Widget.AppCompat.ActionButton">
        <item name = "android:minWidth">0dp</item>
        <item name = "android:width">@dimen/_28sdp</item>
    </style>

    <!-- Overflow menu box size -->
    <style name = "OptionsMenuCustomStyle"
           parent = "Widget.AppCompat.PopupMenu.Overflow">
        <item name = "overlapAnchor">false</item>
        <item name = "android:overlapAnchor"
              tools:ignore = "NewApi">false
        </item>
        <item name = "android:dropDownWidth">@dimen/_10sdp</item>
        <!--        <item name="android:dropDownVerticalOffset">4.0dip</item>-->
    </style>
