<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
   
    <item android:state_pressed = "true">
        <shape android:shape = "rectangle">
            <corners android:radius = "@dimen/_4sdp"/>
            <stroke android:width = "@dimen/_1sdp" android:color = "@android:color/white"/>
            <solid android:color = "@color/grayButton"/>
        </shape>
    </item>

    <item android:state_focused = "false">
        <shape android:shape = "rectangle">
            <corners android:radius = "@dimen/_4sdp"/>
            <stroke android:width = "@dimen/_1sdp" android:color = "@android:color/white"/>
            <solid android:color = "@color/grayPrimary"/>
        </shape>
    </item>
    
    <item android:state_focused = "true">
        <shape android:shape = "rectangle">
            <corners android:radius = "@dimen/_4sdp"/>
            <stroke android:width = "@dimen/_1sdp" android:color = "@android:color/white"/>
            <solid android:color = "@color/grayPrimaryDark"/>
        </shape>
    </item>

</selector>