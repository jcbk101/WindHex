<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android" xmlns:app = "http://schemas.android.com/apk/res-auto">

    <item android:state_checked = "true">
        <shape android:shape = "oval">
            <size android:width = "@dimen/_12sdp" android:height = "@dimen/_12sdp" />
            <solid android:color = "@color/darkWaterButton" />
        </shape>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape = "oval">
                    <size android:width = "@dimen/_12sdp" android:height = "@dimen/_12sdp" />
                    <solid android:color = "@color/darkWaterButton" />
                </shape>
            </item>
            <item android:bottom = "@dimen/_1sdp" android:left = "@dimen/_1sdp" android:right = "@dimen/_1sdp" android:top = "@dimen/_1sdp">
                <shape android:shape = "oval">
                    <solid android:color = "@android:color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

